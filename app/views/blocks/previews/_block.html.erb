<div id="<%= dom_id(block, "preview") %>">
  <%= form_with(model: [template_version, block], local: false ) do |form| %>
    <%= render "blocks/previews/#{block.block_type}", form: form, block: block %>
    <%= form.button class: "btn btn-primary d-inline-flex justify-content-center align-items-center", disabled: true do %>
      <span><%= block.button_text%> <svg style="display:inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
        </svg></span>
    <% end %>
  <% end %>
</div>
