<%= form_with(model: survey_template) do |form| %>
  <%= render "error_messages", resource: form.object %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.textarea :description, class: "form-control" %>
  </div>
  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>
    <% if form.object.new_record? %>
      <%= link_to t("cancel"), survey_templates_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), survey_template_path(@survey_template), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
