<%= content_for :title, "Survey Templates" %>
<%= turbo_stream_from :survey_templates %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Survey Templates</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500 dark:text-gray-300/75">Sort by:</span>
        <%= sortable @survey_templates, :name, "Name", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @survey_templates, :description, "Description", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @survey_templates, :account_id, "Account", class: "text-gray-700 dark:text-gray-300 mr-1" %>
      </div>
    </div>

    <%= link_to t("scaffold.new.title", model: "Survey Template"), new_survey_template_path, class: "btn btn-secondary" %>
  </div>

  <%= tag.div id: ("survey_templates" if first_page?), class: "bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "survey_templates/survey_template", collection: @survey_templates, as: :survey_template, cached: true %>

    <div class="hidden only:block text-center">
      <p class="mb-4 h3">Create your first Survey Template</p>
      <%= link_to t("scaffold.new.title", model: "Survey Template"), new_survey_template_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
